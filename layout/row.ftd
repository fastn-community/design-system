-- import: fastn-community.github.io/design-system/hack

-- component row:
module design-system: ds
ds.hv inset: $ds.spaces.inset-square.zero
ds.gap spacing: $ds.spaces.horizontal-gap.medium
children content:

-- ftd.row:
width: fill-container
padding-vertical.px: $row.inset.vertical
padding-horizontal.px: $row.inset.horizontal
spacing.fixed.px: $row.spacing.gap
spacing if { row.spacing.gap == hack.SPACE-BETWEEN-MAGIC-NUMBER }: space-between
children: $row.content

-- end: ftd.row

-- end: row
