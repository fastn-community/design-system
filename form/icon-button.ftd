integer kind: $kind-default
module design-system: ds

-- ftd.text: circle-button

-- end: circle-button



-- component circle-text-button:
caption text:
optional string link:
module design-system: ds

-- ftd.text: $circle-text-button.text
padding.px: 8
color: $inherited.colors.cta-primary.text
background.solid: $inherited.colors.cta-primary.base
border-color: $inherited.colors.cta-primary.border
border-width.px: 2
border-radius.percent: 50
link: $circle-text-button.link

-- end: circle-text-button
